<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyleHeading" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextStyleServings" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyleIngredientQuantity" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
